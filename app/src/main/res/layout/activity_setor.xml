<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Setor">

    <EditText
        android:id="@+id/etWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Berat (kg)"
        android:textColorHint="@color/black"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/btnSetorKardus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etWeight"
        android:layout_centerHorizontal="true"
        android:text="Setor Kardus Bekas"
        android:backgroundTint="#2196F3"
        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/btnSetorPlastik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSetorKardus"
        android:layout_centerHorizontal="true"
        android:text="Setor Sampah Plastik"
        android:backgroundTint="#2196F3"
        android:layout_marginTop="16dp"
        />

    <Button
        android:id="@+id/btnSetorPlastikKeras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSetorPlastik"
        android:layout_centerHorizontal="true"
        android:text="Setor Sampah Plastik Keras"
        android:backgroundTint="#2196F3"
        android:layout_marginTop="16dp"
        />

</RelativeLayout>
