<!-- custom_button.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#1565C0" /> <!-- Warna latar belakang saat ditekan -->
            <corners android:radius="16dp" /> <!-- Radius sudut tombol -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2196F3" /> <!-- Warna latar belakang default -->
            <corners android:radius="16dp" /> <!-- Radius sudut tombol -->
        </shape>
    </item>
</selector>
